<odoo>
    <!-- Drilldown List View (for availability grid - minimal, no optional columns) -->
    <record id="tlrm_view_booking_list_drilldown" model="ir.ui.view">
        <field name="name">tl.rental.booking.list.drilldown</field>
        <field name="model">tl.rental.booking</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <list create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="project_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state" widget="badge"
                       decoration-warning="state == 'reserved'"
                       decoration-success="state == 'ongoing'"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="tlrm_action_booking" model="ir.actions.act_window">
        <field name="name">Rental Bookings</field>
        <field name="res_model">tl.rental.booking</field>
        <field name="view_mode">list,calendar,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first rental booking!
            </p>
        </field>
    </record>

    <!-- Action for availability drill-down (read-only list) -->
    <record id="tlrm_action_booking_drilldown" model="ir.actions.act_window">
        <field name="name">Bookings</field>
        <field name="res_model">tl.rental.booking</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="tlrm_view_booking_list_drilldown"/>
        <field name="context">{'create': False}</field>
    </record>

    <record id="tlrm_action_availability" model="ir.actions.client">
        <field name="name">Rental Availability</field>
        <field name="tag">tlrm_availability_global</field>
        <field name="target">main</field>
    </record>

    <record id="tlrm_action_dashboard" model="ir.actions.client">
        <field name="name">Rental Dashboard</field>
        <field name="tag">tlrm_dashboard</field>
        <field name="target">main</field>
    </record>

    <!-- Main Menu (Top-level in sidebar) -->
    <menuitem id="tlrm_menu_root" 
              name="Rental" 
              sequence="45" 
              web_icon="tl_rental_manager,static/description/icon.svg"
              groups="tl_rental_manager.tlrm_group_user"/>
    <menuitem id="tlrm_menu_dashboard" 
              name="Dashboard" 
              parent="tlrm_menu_root" 
              action="tlrm_action_dashboard" 
              sequence="5" 
              groups="tl_rental_manager.tlrm_group_user"/>
    <menuitem id="tlrm_menu_booking" 
              name="Bookings" 
              parent="tlrm_menu_root" 
              action="tlrm_action_booking" 
              sequence="10" 
              groups="tl_rental_manager.tlrm_group_user"/>
    <menuitem id="tlrm_menu_availability" 
              name="Availability" 
              parent="tlrm_menu_root" 
              action="tlrm_action_availability" 
              sequence="20" 
              groups="tl_rental_manager.tlrm_group_user"/>

    <!-- List View -->
    <record id="tlrm_view_booking_list" model="ir.ui.view">
        <field name="name">tl.rental.booking.list</field>
        <field name="model">tl.rental.booking</field>
        <field name="arch" type="xml">
            <list decoration-info="state == 'draft'" decoration-warning="state == 'reserved'" decoration-primary="state == 'booked'" decoration-success="state == 'ongoing'" decoration-muted="state in ('finished','returned','cancelled')" limit="80">
                <field name="name"/>
                <field name="project_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="source_warehouse_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="state" widget="badge" 
                       decoration-info="state == 'draft'" 
                       decoration-warning="state == 'reserved'" 
                       decoration-primary="state == 'booked'"
                       decoration-success="state == 'ongoing'" 
                       decoration-muted="state in ('finished','returned','cancelled')"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="tlrm_view_booking_form" model="ir.ui.view">
        <field name="name">tl.rental.booking.form</field>
        <field name="model">tl.rental.booking</field>
        <field name="arch" type="xml">
            <form class="o_form_narrow">
                <header>
                    <button name="action_check_availability" string="Check Availability" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_book" string="Lock Booking" type="object" class="oe_highlight" invisible="state != 'reserved'"/>
                    <button name="action_mark_ongoing" string="Mark Ongoing" type="object" class="oe_highlight" invisible="state != 'booked'"/>
                    <button name="action_finish" string="Finish" type="object" invisible="state != 'ongoing'"/>
                    <button name="action_return" string="Return" type="object" class="oe_highlight" invisible="state != 'finished'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state in ('booked', 'ongoing', 'finished', 'returned', 'cancelled')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,reserved,booked,ongoing,finished,returned"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="source_warehouse_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="date_start" widget="datetime"/>
                            <field name="date_end" widget="datetime"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="source_warehouse_id"/>
                                    <field name="quantity"/>
                                    <field name="return_warehouse_id" optional="show"/>
                                    <field name="expected_return_date" optional="show"/>
                                    <field name="date_start" column_invisible="1"/>
                                    <field name="date_end" column_invisible="1"/>
                                    <field name="state" column_invisible="1"/>
                                    <field name="company_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="tlrm_view_booking_calendar" model="ir.ui.view">
        <field name="name">tl.rental.booking.calendar</field>
        <field name="model">tl.rental.booking</field>
        <field name="arch" type="xml">
            <calendar string="Rental Bookings" date_start="date_start" date_stop="date_end" mode="week" event_open_popup="true">
                <field name="project_id"/>
                <field name="state"/>
                <field name="source_warehouse_id"/>
            </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="tlrm_view_booking_search" model="ir.ui.view">
        <field name="name">tl.rental.booking.search</field>
        <field name="model">tl.rental.booking</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
            </search>
        </field>
    </record>

    <!-- Booking Line List View (for availability grid drill-down) -->
    <record id="tlrm_view_booking_line_list" model="ir.ui.view">
        <field name="name">tl.rental.booking.line.list</field>
        <field name="model">tl.rental.booking.line</field>
        <field name="arch" type="xml">
            <list decoration-warning="state == 'reserved'" decoration-primary="state == 'booked'" decoration-success="state == 'ongoing'" decoration-muted="state in ('finished','returned','cancelled')" create="0" edit="0">
                <field name="booking_id" string="Booking Ref"/>
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="quantity" string="Qty"/>
                <field name="date_start" string="Start"/>
                <field name="date_end" string="End"/>
                <field name="source_warehouse_id" string="From" optional="hide"/>
                <field name="return_warehouse_id" string="Return To" optional="hide"/>
                <field name="expected_return_date" string="Return Date" optional="hide"/>
                <field name="state" widget="badge"
                       decoration-warning="state == 'reserved'"
                       decoration-primary="state == 'booked'"
                       decoration-success="state == 'ongoing'"
                       decoration-muted="state in ('finished','returned','cancelled')"/>
            </list>
        </field>
    </record>

    <!-- Booking Line Form View -->
    <record id="tlrm_view_booking_line_form" model="ir.ui.view">
        <field name="name">tl.rental.booking.line.form</field>
        <field name="model">tl.rental.booking.line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="booking_id"/>
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="source_warehouse_id"/>
                            <field name="return_warehouse_id"/>
                            <field name="state"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="expected_return_date"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Booking Line Search View -->
    <record id="tlrm_view_booking_line_search" model="ir.ui.view">
        <field name="name">tl.rental.booking.line.search</field>
        <field name="model">tl.rental.booking.line</field>
        <field name="arch" type="xml">
            <search>
                <field name="booking_id"/>
                <field name="product_id"/>
                <filter name="reserved" string="Reserved" domain="[('state', '=', 'reserved')]"/>
                <filter name="booked" string="Booked" domain="[('state', '=', 'booked')]"/>
                <filter name="ongoing" string="Ongoing" domain="[('state', '=', 'ongoing')]"/>
            </search>
        </field>
    </record>
</odoo>
