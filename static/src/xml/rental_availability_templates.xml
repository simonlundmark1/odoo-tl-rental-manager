<?xml version="1.0" encoding="UTF-8"?>
<templates id="tlrm_availability_templates" xml:space="preserve">
    <t t-name="tl_rental_manager.TlrmAvailabilityAction">
        <div class="o_tlrm_availability_action o_action h-100 d-flex flex-column bg-view">
            <t t-if="state.loading">
                <div class="d-flex align-items-center justify-content-center flex-grow-1">
                    <div class="o_loading_indicator">
                        <i class="fa fa-spin fa-spinner fa-2x text-muted"/>
                    </div>
                </div>
            </t>
            <t t-elif="state.error">
                <div class="p-3">
                    <div class="alert alert-danger mb-0" role="alert">
                        <t t-esc="state.error"/>
                    </div>
                </div>
            </t>
            <t t-elif="!rows.length">
                <div class="d-flex align-items-center justify-content-center flex-grow-1">
                    <div class="o_nocontent_help">
                        <p class="o_view_nocontent_smiling_face">No products found for rental availability.</p>
                    </div>
                </div>
            </t>
            <t t-else="">
                <div class="o_tlrm_availability_controls o_control_panel_main d-flex align-items-center gap-3 px-3 py-2 border-bottom bg-white">
                    <div class="o_tlrm_search_box">
                        <div class="input-group input-group-sm" style="width: 240px;">
                            <span class="input-group-text bg-white border-end-0">
                                <i class="fa fa-search text-muted"/>
                            </span>
                            <input type="text" 
                                   class="form-control border-start-0" 
                                   placeholder="Search products..." 
                                   t-att-value="state.searchQuery"
                                   t-on-input="onSearchInput"/>
                        </div>
                    </div>
                    <span class="text-muted small">
                        <t t-esc="rows.length"/> product(s)
                    </span>
                    <div class="ms-auto d-flex align-items-center gap-1">
                        <button class="btn btn-light btn-sm border" t-on-click="previousWeeks" title="Previous 12 weeks">
                            <i class="fa fa-chevron-left"/>
                        </button>
                        <button class="btn btn-light btn-sm border px-3" t-on-click="goToToday" title="Go to current week">
                            Today
                        </button>
                        <button class="btn btn-light btn-sm border" t-on-click="nextWeeks" title="Next 12 weeks">
                            <i class="fa fa-chevron-right"/>
                        </button>
                    </div>
                </div>
                <div class="o_tlrm_availability_table_wrapper flex-grow-1 overflow-auto px-3 py-2">
                    <table class="table table-sm table-hover o_tlrm_availability_table mb-0" style="border-collapse: separate; border-spacing: 0;">
                        <thead class="sticky-top">
                            <tr>
                                <th class="bg-100 border-bottom" style="cursor: pointer; min-width: 200px; position: sticky; left: 0; z-index: 2;" t-on-click="toggleSort">
                                    <span class="d-flex align-items-center gap-1">
                                        Product
                                        <i t-att-class="'fa fa-sort-alpha-' + (state.sortOrder === 'asc' ? 'asc' : 'desc') + ' text-muted small'"/>
                                    </span>
                                </th>
                                <t t-foreach="columns" t-as="col" t-key="col.key">
                                    <th class="text-center text-nowrap" style="min-width: 65px;" t-att-title="col.start + ' - ' + col.end">
                                        <t t-esc="col.label"/>
                                    </th>
                                </t>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="rows" t-as="row" t-key="row.product_id">
                                <tr>
                                    <td class="align-middle bg-white border-bottom" style="position: sticky; left: 0; z-index: 1;">
                                        <a href="#" class="text-primary text-decoration-none" t-on-click.prevent="() => this.openProduct(row.product_id)">
                                            <t t-esc="row.display_name"/>
                                        </a>
                                    </td>
                                    <t t-foreach="row.cells" t-as="cell" t-key="cell.column_key">
                                        <t t-set="colData" t-value="columns.find(c => c.key === cell.column_key)"/>
                                        <td
                                            t-att-title="cell.booked > 0 ? (cell.booked === 1 ? '1 booking' : cell.booked + ' bookings') + ' - Click to view' : 'No bookings'"
                                            t-att-class="'text-center align-middle border-bottom o_tlrm_cell' + (cell.booked > 0 ? ' o_tlrm_cell_clickable' : '')"
                                            t-att-style="'background-color: ' + this.getCellColor(cell, row.base_capacity) + ';'"
                                            t-on-click="() => cell.booked > 0 &amp;&amp; this.openBookingsForCell(row.product_id, cell.column_key, colData?.start, colData?.end)"
                                        >
                                            <t t-esc="cell.available"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </div>
    </t>
</templates>
