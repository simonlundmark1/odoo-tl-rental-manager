<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="tlrm_group_user" model="res.groups">
            <field name="name">TL Rental User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="tlrm_group_manager" model="res.groups">
            <field name="name">TL Rental Manager</field>
            <field name="implied_ids" eval="[(4, ref('tlrm_group_user'))]"/>
        </record>

        <!-- Extend stock.group_stock_user to imply tlrm_group_user -->
        <!-- This makes all stock users automatically rental users -->
        <record id="stock.group_stock_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('tlrm_group_user'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Multi-company Record Rules -->
        <record id="tlrm_booking_company_rule" model="ir.rule">
            <field name="name">TL Rental Booking: Multi-Company</field>
            <field name="model_id" ref="model_tl_rental_booking"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="tlrm_booking_line_company_rule" model="ir.rule">
            <field name="name">TL Rental Booking Line: Multi-Company</field>
            <field name="model_id" ref="model_tl_rental_booking_line"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
