<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="group_rental_user" model="res.groups">
            <field name="name">Rental User</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_rental_manager" model="res.groups">
            <field name="name">Rental Manager</field>
            <field name="category_id" ref="base.module_category_inventory_inventory"/>
            <field name="implied_ids" eval="[(4, ref('group_rental_user'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <!-- Multi-company Record Rules -->
        <record id="rental_booking_company_rule" model="ir.rule">
            <field name="name">Rental Booking: Multi-Company</field>
            <field name="model_id" ref="model_stock_rental_booking"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="rental_booking_line_company_rule" model="ir.rule">
            <field name="name">Rental Booking Line: Multi-Company</field>
            <field name="model_id" ref="model_stock_rental_booking_line"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>
    </data>
</odoo>
